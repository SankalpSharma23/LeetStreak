{
  "manifest_version": 3,
  "name": "LeetStreak",
  "version": "1.0.0",
  "description": "Track LeetCode streaks with friends",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://leetcode.com/graphql",
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'self'; form-action 'none'; frame-ancestors 'none'; upgrade-insecure-requests; report-uri /__/csp-report",
    "sandbox": "sandbox allow-scripts; script-src 'self'"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetStreak"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["leetcode-integration.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}